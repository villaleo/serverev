<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ServeRev</title>
    <link rel="stylesheet" href="/css/style.css">

    <!-- Import Bootstrap -->
    <%- include("partials/bootstrap.ejs") %>
    <!-- Import Fonts -->
    <%- include("partials/fonts.ejs") %>

</head>
<body>
    <header>
        <!-- Navigation -->
        <nav class="navbar navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">ServeRev</a>
                <form id="searchForm" action="results" class="d-flex">
                    <input class="form-control me-2" type="text" placeholder="Enter a restaurant.." name="search" id="search">
                    <button class="btn btn-warning" type="submit" style="margin-right: 20px;">Search</button>
                    <a href="/logout">
                        <button class="btn btn-danger" type="submit" formaction="/logout">Logout</button>
                    </a>
                </form>
            </div>
        </nav>
    </header>
    <main class = "welcomeMain">
        <br>
        <h3 style="margin-left: 20px;">Welcome, <%= first_name %>!</h3>
        <br>
        
        <h5 style="margin-left: 20px;" class = "popRes">Popular restaurants</h5>
        <div class="HView ">
    
           <% for(let i=0; i < restaurants.length; i++){ %>
            <div class = "HVItem">
              <%= restaurants[i].name%>
              <div>
                 <img src="<%= restaurants[i].picture%>" alt="Image of a restaurant" class="thumbSize">
              
                <div class="rating">
                  <% for (let a=0; a<restaurants[i].rating; a++){ %>
                    ⭐️
                  <% } %>
                </div>
                <a href="/addReview/<%= restaurants[i].id %>">
                    <button class="btn btn-success" id = "RevBtn2">Review</button>
                </a>
                <br>

                <a href="/reviews-for/<%= restaurants[i].id%>" class = "VRFont"> View reviews </a>
              </div>
           </div>
           <% } %>
        
        </div>

        
           
        <h5 style="margin-left: 20px;" class = "yReviews">Your reviews</h5>
        <div class="HView" id = "reviewBox">
            <% for (let i = 0; i < reviews.length; i++){ %> 
              
          <div class="HVItem">
                <%= reviews[i].name%>
                <div class="rating">
                    <% for (let a = 0; a < reviews[i].rating; a++){ %>
                    ⭐️
                  <% } %>
                </div>
                <p>
                    <%= reviews[i].details%>
                </p>
            </div>
         <% } %>
        </div> 
        <form action="/edit-reviews">
            <button class="btn btn-warning">Manage reviews</button>
        </form>
    </main>
</body>
</html>
